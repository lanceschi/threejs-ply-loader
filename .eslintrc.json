{
  "env": {
    "node": true,
    "mocha": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [],  
  "rules": {
    "no-console": "off",
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-trailing-spaces": "error",
    "no-var": "error",
    "quotes": ["error", "single", {
      "allowTemplateLiterals": true
    }],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error", {
        "varsIgnorePattern": "should|expect"
      }
    ]
  },
  "globals": {
    "process": true
  }
}